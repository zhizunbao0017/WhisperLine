{
  "expo": {
    "name": "WhisperLine",
    "slug": "whisperline",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "whisperline",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to get the current weather for your diary entry.",
        "NSFaceIDUsageDescription": "WhisperLine uses Face ID to securely lock and protect your entries.",
        "NSPhotoLibraryUsageDescription": "To let you choose a custom companion avatar from your photos.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.xietian.whisperline",
      "buildNumber": "4"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.xietian.whisperline"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#03ACE2",
          "dark": {
            "image": "./assets/images/icon.png",
            "resizeMode": "contain",
            "backgroundColor": "#03ACE2"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "9685fd18-75f1-4c62-807b-e38eed6370ae"
      }
    }
  }
}
