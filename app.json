{
  "expo": {
    "name": "Lifyn",
    "slug": "Lifyn",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myaidiary",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
     // ... (已有的其他权限)
     "NSLocationWhenInUseUsageDescription": "We need your location to get the current weather for your diary entry.",
     "NSFaceIDUsageDescription": "My AI Diary uses Face ID to securely lock and protect your entries.",
     "NSPhotoLibraryUsageDescription": "To let you choose a custom companion avatar from your photos."
    }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#03ACE2",
          "dark": {
            "image": "./assets/images/icon.png",
            "resizeMode": "contain",
            "backgroundColor": "#03ACE2"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
